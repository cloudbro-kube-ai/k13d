# Mock OpenAI API Server for Integration Testing
FROM golang:1.22-alpine AS builder

WORKDIR /app
COPY mock_openai.go .
RUN go build -o mock-openai mock_openai.go

FROM alpine:3.19
RUN apk --no-cache add ca-certificates curl
WORKDIR /app
COPY --from=builder /app/mock-openai .

EXPOSE 8080
CMD ["./mock-openai"]
